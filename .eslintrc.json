{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "@typescript-eslint/no-unused-vars": "warn", // Cambiar errores de variables no usadas a advertencias
    "@typescript-eslint/no-explicit-any": "warn", // Permitir 'any' con advertencias
    "react-hooks/exhaustive-deps": "warn", // Advertencia para dependencias faltantes en hooks
    "@next/next/no-img-element": "off", // Permitir el uso de <img> en lugar de <Image>
    "react/jsx-no-undef": "error" // Asegurarse de que los componentes est√©n definidos
  }
}
